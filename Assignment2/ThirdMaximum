class Solution {
    public int thirdMax(int[] arr) {
        Arrays.sort(arr);
        int n=arr.length;
        if(n<3){
            return arr[n-1];
        }
        int fm=arr[n-1];
        int sm=fm;
        int tm=sm;
        int c=0;
        for(int i=n-1;i>=0;i--){
            if(arr[i]<sm){
                sm=arr[i];
                c++;
            }
            if(c==2){
                return sm;
                
            }
        }
        return tm;
    }
}
